<header class="text-white py-2">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= image_tag 'logo.png', size: '100x70' %>
      </a>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <!-- ユーザーがサインイン中の場合 -->
            <li class="nav-item">
              <%= link_to  posts_path do %>
                <i class="fa-solid fa-book-open fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to mypage_path do %>
                <i class="fa-solid fa-house fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  search_path do %>
                <i class="fa-solid fa-magnifying-glass fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_record_path do %>
                <i class="fa-solid fa-dumbbell fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket fa-lg nav-link text-light"></i>
              <% end %>
            </li>

          <% elsif admin_signed_in? %>
            <!-- 管理者がサインインしている場合 -->
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to  admin_posts_path do %>
                <i class="fa-solid fa-book-open fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to admin_users_path do %>
                <i class="fa-solid fa-user fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  admin_search_path do %>
                <i class="fa-solid fa-magnifying-glass fa-lg nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to destroy_admin_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket fa-lg nav-link text-light"></i>
              <% end %>
            </li>

          <% else %>
            <!-- サインインしていない場合 -->
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to 'About', about_path, class: "nav-link text-light" %><!--text-light は、テキストを薄い色に変更-->
            </li>
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to new_user_registration_path do %>
                <i class="fa-solid fa-user-plus nav-link text-light"></i>
              <% end %>
            </li>
            <li class="nav-item"><!--nav-itemで間隔や配置が適切に調整-->
              <%= link_to new_user_session_path do %><!--text-light は、テキストを薄い色に変更-->
                <i class="fa-solid fa-right-to-bracket nav-link text-light"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>