<div class="card-list-container">
  <div class="row">
    <% post_comments.each do |post_comment| %>
      <div class="col-md-10">
        <div class="card mx-auto mt-0 shadow-lg">
          <div class="card-header">
            <%= link_to admin_user_path(post_comment.user) do %>
              <%= image_tag post_comment.user.get_profile_image(50,50), class: "rounded-circle" %>
            <% end %>
            <%= post_comment.user.name %>
          </div>
          <div class="card-body">
            <%= post_comment.comment %>
            <p class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
            <i class="fas fa-heart fa-lg" aria-hidden="true"></i>
            <%= post.favorites.count %>
            <div class="d-flex justify-content-end">
              <%= link_to "削除", admin_post_post_comment_path(post_id: post_comment.post.id, id: post_comment), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "投稿を削除しますか？" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>