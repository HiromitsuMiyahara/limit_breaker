<div class="container-fluid">
  <div class="row">
  <% posts.each do |post| %>
    <div class="col-md-10 mb-2">
      <div class="card">
        <div class="card-header">
          <% if post.user = current_user %>
            <%= link_to mypage_path do %>
              <%= image_tag post.user.get_profile_image(50,50) %>
            <% end %>
          <% else %>
            <%= link_to user_path(post.user) do %>
              <%= image_tag post.user.get_profile_image(50,50) %>
            <% end %>
          <% end %>
          <%= post.user.name %>
        </div>
        <div class="card-body">
          <%= post.body %>
            <% if post.post_image.present? %>
              <%= image_tag post.post_image, class: 'img-fluid' %>
            <% end %>
          <p class="text-muted"><%= post.created_at.strftime('%Y/%m/%d') %></p>
          <%= link_to "編集", edit_post_path(post.id), class: "btn btn-primary btn-sm" %>
          <%= link_to "削除", post_path(post.id), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "投稿を削除しますか？" } %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>