  <!--トレーニング投稿フォーム-->
  <div>
   <%= form_with model: @record, local: true do |f| %>
      <div class="form-group mx-2">
        <div>
          <%= f.label :start_time, "トレーニング日" %>
        </div>
        <div>
          <%= f.date_select :start_time, class: "form-control" %>
        </div>
      </div>
      <div class="form-group mx-2">
        <%= f.label :part, "部位" %>
        <%= f.select :part, Record.part_selects.keys.map {|k| [I18n.t("enums.record.part_select.#{k}"),k]}, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :place, "場所" %>
        <%= f.text_field :place, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :exercise, "トレーニング名" %>
        <%= f.text_field :exercise, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :weight, "重量(kg)" %>
        <%= f.number_field :weight, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :rep, "レップ数" %>
        <%= f.number_field :rep, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :set, "セット数" %>
        <%= f.number_field :set, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.submit '記録を保存', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
