 <div class="container">
    <div class="row">
      <!-- ユーザープロフィール表示 -->
      <div class="col-md-2">
        <%= render "profile", user: @user %>
      </div>
      <div class="col-md-10">
        <%= render "public/posts/posts", posts: @posts %>
      </div>
    </div>

    <div class="row">
      <div  class="col-md-12 mt-5">
        <div class="user-record-section">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>日付</th>
                <th>部位</th>
                <th>場所</th>
                <th>エクササイズ</th>
                <th>重量</th>
                <th>レップ数</th>
                <th>セット数</th>
              </tr>
            </thead>
            <tbody>
              <% @records.each do |record| %>
                <tr>
                  <td class="align-middle">
                    <%= link_to record_path(record.id) do %>
                      <%= record.start_time %>
                    <% end %>
                  </td>
                  <td class="align-middle"><%= record.part %></td>
                  <td class="align-middle"><%= record.place %></td>
                  <td class="align-middle"><%= record.exercise %></td>
                  <td class="align-middle"><%= record.weight %></td>
                  <td class="align-middle"><%= record.rep %></td>
                  <td class="align-middle"><%= record.set %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>