<div class="container">
  <div class="row justify-content-center">
    <!--バリデーションエラーメッセージ-->
    <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-header">
          <h2 class="mb-0">プロフィール編集</h2>
        </div>
        <div class="card-body">
          <%= form_with model: current_user, method: :patch, url: user_path(current_user), local: true do |f| %>
            <div class="form-group">
              <%= f.label :profile_image, "プロフィール画像", class: 'form-label' %>
              <div class="mb-3">
                <%= image_tag current_user.get_profile_image(100,100), class: 'img-thumbnail mb-2' %>
                <%= f.file_field :profile_image, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group mb-3">
              <%= f.label :name, "ユーザー名", class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :body, "自己紹介", class: 'form-label' %>
              <%= f.text_area :body, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :weight, "体重 (kg)", class: 'form-label' %>
              <%= f.number_field :weight, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :height, "身長 (cm)", class: 'form-label' %>
              <%= f.number_field :height, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :experience, "トレーニング歴 (年)", class: 'form-label' %>
              <%= f.number_field :experience, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <%= f.label :birth_year, "誕生年(年)", class: 'form-label' %>
              <%= f.number_field :birth_year, class: 'form-control' %>
            </div>
            <div class="form-group mb-3">
              <div>
                <%= f.label :gender, "性別", class: 'form-label form-label-inline' %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, "man", class: 'form-check-input' %>
                <%= f.label :gender, "男性", class: 'form-check-label me-3' %>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :gender, "woman", class: 'form-check-input' %>
                <%= f.label :gender, "女性", class: 'form-check-label' %>
              </div>
            </div>
            <div class="form-group mb-3">
              <%= f.label :email, "メールアドレス", class: 'form-label' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit "変更を保存", class: 'btn btn-primary' %>
              <%= link_to "退会する", users_unsubscribe_path, class: "btn btn-danger ms-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
