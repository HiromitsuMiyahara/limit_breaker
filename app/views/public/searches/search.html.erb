<div class="container">
  <div class="d-flex justify-content-center mb-2 mt-2">
    <%= render "public/searches/form" %>
  </div>
    <h2 class="text-center">検索ワード "<%= @word %>"</h2>
  <div class="row">
    <div class="col-md-2 ml-0 fixed-profile">
      <%= render "public/users/profile", user: current_user %>
    </div>
    <div class="col-md-10">
      <% if @range == "User" %>
        <%= render "public/users/index", users: @users %>
      <% else %>
        <%= render "public/posts/posts", posts: @posts %>
    <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <% if @range == "User" %>
      <%= paginate @users %>
    <% else %>
      <%= paginate @posts %>
    <% end %>
  </div>
</div>